check_install () { 
	echo "Installing: $1"
	pacman -Q $1 > /dev/null
	if [ $? == 1 ]; then
		pacman --noconfirm --overwrite='*' -S $1
	fi
}

setup_proxspace ()
{
  if [ "$MSYSTEM" == "MINGW64" ]; then	
	for pkg in $(grep "^[^#;]" /ps/packages.txt); do
		check_install $pkg
	done

	echo $(date '+%Y-%m-%d %H:%M:%S') > /ps/installed64.txt
  fi
}
setup_proxspace